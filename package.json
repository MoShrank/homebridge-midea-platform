{
  "displayName": "Homebridge Midea",
  "name": "homebridge-midea-platform",
  "version": "0.3.0",
  "description": "Homebridge plugin for Midea devices",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kovapatrik/homebridge-midea.git"
  },
  "bugs": {
    "url": "https://github.com/kovapatrik/homebridge-midea/issues"
  },
  "engines": {
    "node": "^18.17.0",
    "homebridge": "^1.6.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "lint:fix": "eslint src/**.ts --fix",
    "prettier": "prettier --loglevel warn \"**/*.{ts,tsx,css,md}\"",
    "prettier:fix": "prettier --loglevel warn \"**/*.{ts,tsx,css,md}\" --write",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "format": "npm run prettier:fix && npm run lint:fix"
  },
  "keywords": [
    "homebridge-plugin"
  ],
  "dependencies": {
    "axios": "^1.5.0",
    "fast-xml-parser": "^4.2.7",
    "luxon": "^3.4.2",
    "semaphore-promise": "^1.4.2"
  },
  "devDependencies": {
    "@types/luxon": "^3.3.1",
    "@types/node": "^18.16.20",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "homebridge": "^1.6.0",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix && prettier --write",
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
