{
  "pluginAlias": "midea-ac",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "user": {
        "title": "Midea Account Username",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Midea Account Password",
        "type": "string",
        "required": true
      },
      "useChinaServer": {
        "title": "Use China Server",
        "type": "boolean",
        "default": false
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "ip": {
              "title": "Device IP Address",
              "type": "string",
              "required": true
            },
            "name": {
              "title": "Device Name",
              "type": "string"
            }
          }
        }
      }
    }
  }
}